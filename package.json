{
  "name": "panwriter",
  "productName": "PanWriter",
  "version": "0.5.0",
  "description": "Distraction-free markdown editor with pandoc integration and paged preview pane.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "debug": "electron --inspect-brk=5858 .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/mb21/panwriter",
  "keywords": [
    "markdown",
    "editor"
  ],
  "author": "Mauro Bieg",
  "license": "GPLv3 (or later)",
  "build": {
    "appId": "com.panwriter.app",
    "fileAssociations": [{
      "ext": ["md", "markdown", "txt", "html", "docx", "odt", "tex"]
    }]
  },
  "postinstall": "electron-builder install-app-deps",
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "codemirror": "^5.40.2",
    "fix-path": "^2.1.0",
    "katex": "^0.10.0-rc.1",
    "markdown-it": "^8.4.2",
    "markdown-it-attrs": "^2.3.2",
    "markdown-it-container": "^2.0.0",
    "markdown-it-deflist": "^2.0.3",
    "markdown-it-footnote": "^3.0.1",
    "markdown-it-implicit-figures": "^0.9.0",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "markdown-it-texmath": "^0.5.2",
    "react": "^16.4.2",
    "react-codemirror2": "^5.1.0",
    "react-dom": "^16.4.2",
    "yaml-front-matter": "^4.0.0"
  },
  "devDependencies": {
    "electron": "^2.0.11",
    "electron-builder": "^20.29.0"
  }
}
