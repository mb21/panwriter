{
  "name": "panwriter",
  "productName": "PanWriter",
  "version": "0.5.0",
  "description": "Markdown editor with pandoc integration and paginated preview",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "install": "psc-package install",
    "build": "psc-package build",
    "clean": "rm -rf .cache .psc-package .psci_modules node_modules output dist",
    "debug": "electron --inspect-brk=5858 .",
    "dist": "electron-builder -m"
  },
  "repository": "https://github.com/mb21/panwriter",
  "keywords": [
    "markdown",
    "editor"
  ],
  "author": "Mauro Bieg",
  "License": "GPL-3.0-or-later",
  "build": {
    "appId": "com.panwriter.app",
    "fileAssociations": [
      {
        "ext": [
          "md",
          "markdown",
          "txt",
          "html",
          "docx",
          "odt",
          "tex"
        ]
      }
    ]
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "codemirror": "^5.41.0",
    "fix-path": "^2.1.0",
    "katex": "^0.10.0-rc.1",
    "markdown-it": "^8.4.2",
    "markdown-it-attrs": "^2.3.2",
    "markdown-it-container": "^2.0.0",
    "markdown-it-deflist": "^2.0.3",
    "markdown-it-footnote": "^3.0.1",
    "markdown-it-implicit-figures": "^0.9.0",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "markdown-it-texmath": "^0.5.2",
    "react": "^16.6.1",
    "react-codemirror2": "^5.1.0",
    "react-dom": "^16.6.1",
    "yaml-front-matter": "^4.0.0"
  },
  "devDependencies": {
    "electron": "2.0.13",
    "electron-builder": "^20.31.2",
    "psc-package-bin-simple": "^1.0.4",
    "purescript": "^0.12.0"
  }
}
